{
  "manifest_version": 2,
  "name": "Mindload",
  "description": "Capture your brain",
  "version": "0.1.0",
  "icons": {
    "64": "icons/icon.png"
  },
  "permissions": ["storage"],
  "browser_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "popup.html",
    "default_title": "Mindload"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Comma",
        "mac": "Command+Comma"
      }
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{b6986168-d335-4312-b975-64553d0fc185}",
      "strict_min_version": "70.0"
    }
  }
}
